<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/fragnews_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:paddingRight="10dp"
                android:background="#40000000"
                android:gravity="center|right"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/fragnews_viewpager_title"
                    android:paddingLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:text="1212112121"
                    android:textColor="#80ffffff"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:gravity="center|right"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="@dimen/activity_horizontal_margin">
                    <TextView
                        android:id="@+id/frag_view1"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/cirty_white"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:id="@+id/frag_view2"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/cirty_black"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                    <TextView
                        android:id="@+id/frag_view3"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/cirty_black"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/fragnews_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</LinearLayout>